<!DOCTYPE html>
<html>
<head>
  <title>Remed4me</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="custom-bootstrap-menu" class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container-fluid">
          <div class="navbar-header"><a class="navbar-brand" href="/">MediMe</a>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
              </button>
          </div>
          <div class="collapse navbar-collapse navbar-menubuilder">
              <ul class="nav navbar-nav navbar-left">
                  <li><a href="/">Reminders</a>
                  </li>
                  <li><a href="/medications">Manage Medications</a>
                  </li>
                  <li><a href="#">About Us</a>
                  </li>
                  <% if current_user %>
                      <li><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></li>
                  <% else %>
                      <li><%= link_to 'Signup', new_user_registration_path %></li>
                      <li><%= link_to 'Login', new_user_session_path %></li>
              <% end %>

              </ul>
          </div>
      </div>
  </div>
<div class = "container">
  <%= yield %>
</div>
</body>
</html>
